<Page x:Class="MangaReader_MVVM.Views.MangaDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:t10controls="using:Template10.Controls"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:MangaReader_MVVM.Views"
      xmlns:models="using:MangaReader_MVVM.Models"
      xmlns:converters="using:MangaReader_MVVM.Converters"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:MangaReader_MVVM.ViewModels" mc:Ignorable="d">
    <Page.DataContext>
        <vm:MangaDetailsPageViewModel x:Name="ViewModel" />
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary Source="..\Styles\Templates.xaml" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="600"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <t10controls:PageHeader x:Name="PageHeader" Text="{x:Bind ViewModel.Manga.Title}" Frame="{x:Bind Frame}" Grid.ColumnSpan="2">
            <t10controls:PageHeader.PrimaryCommands>
                <AppBarButton Icon="SelectAll" Label="Select All" IsEnabled="False"/>
                <AppBarSeparator />
                <AppBarButton Icon="Sort" Label="Sort" Command="{Binding Path=SortGridCommand}"  />
            </t10controls:PageHeader.PrimaryCommands>
        </t10controls:PageHeader>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Margin="10,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <StackPanel>
                    <controls:ImageEx x:Name="Cover" Width="206" Height="300"
                                      IsCacheEnabled="True"
                                      Source="{x:Bind ViewModel.Manga.Cover}"
                                      Stretch="Uniform"
                                      PlaceholderSource="/Assets/404_whoopsies.jpg"
                                      PlaceholderStretch="Uniform"
                                      VerticalAlignment="Top" />
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0" FlowDirection="RightToLeft">
                        <StackPanel.Resources>
                            <converters:BoolToFavoritSymbolConverter x:Key="BoolToFavoritSymbolConverter"/>
                        </StackPanel.Resources>
                        <Button x:Name="FavoriteButton"
                                Command="{x:Bind ViewModel.FavoritCommand}"
                                Content="{Binding Manga.IsFavorit, Mode=TwoWay, Converter={StaticResource BoolToFavoritSymbolConverter}, UpdateSourceTrigger=PropertyChanged}"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Height="30" Width="30"
                                Margin="0,0,10,5"
                                Grid.Column="1"
                                Canvas.ZIndex="10"
                                Padding="0" />
                        <Button x:Name="Download" IsEnabled="False"
                                Command="{x:Bind ViewModel.DownloadCommand}"
                                Content="&#xE118;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Height="30" Width="30"
                                Margin="0,0,5,5"
                                Grid.Column="1"
                                Canvas.ZIndex="10"
                                Padding="0" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="12,0,0,0">
                    <StackPanel.Resources>
                        <converters:BoolToMangaStatusConverter x:Key="BoolToMangaStatusConverter"/>
                    </StackPanel.Resources>
                    <TextBlock x:Name="Alias" Text="{x:Bind ViewModel.Manga.Alias}" FontSize="15" Width="372" TextWrapping="WrapWholeWords"/>
                    <TextBlock x:Name="Category" Text="{x:Bind ViewModel.Manga.Category}" FontSize="15" TextWrapping="WrapWholeWords"/>
                    <TextBlock x:Name="Status" Text="{Binding Manga.Ongoing, Converter={StaticResource BoolToMangaStatusConverter}}" FontSize="15" />
                    <TextBlock x:Name="NumberOfChapters" Text="{x:Bind ViewModel.Manga.NumberOfChapters}" FontSize="15"/>
                    <TextBlock x:Name="LastUpdated" Text="{x:Bind ViewModel.Manga.LastUpdated}" FontSize="15" />
                </StackPanel>
            </StackPanel>
            <TextBlock x:Name="Description" Text="{x:Bind ViewModel.Manga.Description}" TextWrapping="WrapWholeWords"/>
        </StackPanel>

        <GridView x:Name="ChapterGridView" Grid.Row="1" Grid.Column="1"
                  ItemsSource="{Binding Path=Manga.Chapters, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                  Margin="12,10,0,0"
                  IsItemClickEnabled="True"
                  IncrementalLoadingThreshold="20"
                  ItemTemplate="{StaticResource ChapterItem}"
                  ItemClick="{x:Bind ViewModel.ChapterClickedAsync}" >
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="0,0,10,10" />
                </Style>
            </GridView.ItemContainerStyle>
        </GridView>
    </Grid>
</Page>