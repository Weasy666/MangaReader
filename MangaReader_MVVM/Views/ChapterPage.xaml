<Page x:Class="MangaReader_MVVM.Views.ChapterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:t10controls="using:Template10.Controls"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:MangaReader_MVVM.Views"
      xmlns:models="using:MangaReader_MVVM.Models"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:MangaReader_MVVM.ViewModels" mc:Ignorable="d">
    <Page.DataContext>
        <vm:ChapterPageViewModel x:Name="ViewModel" />
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary Source="..\Styles\Templates.xaml" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>-->

        <t10controls:PageHeader x:Name="ChaptersBar" Frame="{x:Bind Frame}" ClosedDisplayMode="Hidden" IsOpen="True" Height="150" IsSticky="True" >
            <t10controls:PageHeader.Content>
                <StackPanel Orientation="Horizontal" >
                    <Grid Width="350" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="103"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="FavoriteButton"
                                Content="0"
                                FontFamily="Segoe UI Symbol"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Height="30" Width="30"
                                Margin="0,0,5,5"
                                Grid.Column="0"
                                Canvas.ZIndex="10"
                                Padding="0" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                        <controls:ImageEx x:Name="ImageExControl2"
                                          Width="103" Height="150" Grid.Column="0"
                                          IsCacheEnabled="True"
                                          Source="{x:Bind ViewModel.Chapter.ParentManga.Cover}"
                                          Stretch="UniformToFill"
                                          IsTapEnabled="False"
                                          PlaceholderSource="/Assets/404_whoopsies.jpg"
                                          PlaceholderStretch="Uniform" />
                        <StackPanel Orientation="Vertical" 
                                    Margin="5,0,0,0"
                                    MaxWidth="247"
                                    Grid.Column="1">
                            <TextBlock Text="{x:Bind ViewModel.Chapter.ParentManga.Title}" FontSize="20" TextWrapping="WrapWholeWords"/>
                            <TextBlock Text="{x:Bind ViewModel.Chapter.ParentManga.Ongoing}" FontSize="15"/>
                            <TextBlock Text="{x:Bind ViewModel.Chapter.ParentManga.LastUpdated}" FontSize="15"/>
                            <TextBlock Text="{x:Bind ViewModel.Chapter.ParentManga.Category}" FontSize="15" TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                    </Grid>
                    <ScrollViewer HorizontalScrollMode="Enabled"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollMode="Disabled"
                                  VerticalScrollBarVisibility="Disabled"
                                  Tapped="{x:Bind ViewModel.ChapterClickedAsync}" >
                        <GridView x:Name="ChapterView"
                                  Margin="0,0,0,0"
                                  ItemsSource="{x:Bind ViewModel.Chapter.ParentManga.Chapters}"
                                  VerticalContentAlignment="Stretch"
                                  ItemTemplate="{StaticResource ChapterItem}" >
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel Orientation="Horizontal"
                                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                     ScrollViewer.VerticalScrollBarVisibility="Disabled" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </ScrollViewer>
                </StackPanel>
            </t10controls:PageHeader.Content>
        </t10controls:PageHeader>

        <ScrollViewer HorizontalScrollMode="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollMode="Disabled"
                      VerticalScrollBarVisibility="Disabled"
                      >
            <GridView x:Name="PageView"
                      Margin="0,0,0,0"
                      ItemsSource="{x:Bind ViewModel.Pages}"
                      VerticalContentAlignment="Stretch"
                      IsItemClickEnabled="False">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel IsHitTestVisible="False"
                                         IsTapEnabled="False"
                                         IsDoubleTapEnabled="False"
                                         IsHoldingEnabled="False"
                                         IsRightTapEnabled="False"
                                         Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate x:Name="PageTemplate" x:DataType="models:Page" >
                        <Grid x:Name="PageImage" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,10">
                            <controls:ImageEx x:Name="ImageExControl1"
                                  IsCacheEnabled="True"
                                  Source="{x:Bind Url}"
                                  Stretch="UniformToFill"
                                  IsTapEnabled="False"
                                  PlaceholderSource="/Assets/404_whoopsies.jpg"
                                  PlaceholderStretch="Uniform" />
                            <Grid x:Name="PageNumber"
                                  Height="30"
                                  Width="40"
                                  Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                                  BorderBrush="{x:Null}"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
                                  Visibility="Collapsed" >
                                <TextBlock Text="{x:Bind Number}"
                                           FontSize="18"
                                           Foreground="White"
                                           Margin="0,0,8,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center">Page</TextBlock>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </ScrollViewer>
    </Grid>
</Page>
