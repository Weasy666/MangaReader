<Page x:Class="MangaReader_MVVM.Views.MangasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:t10controls="using:Template10.Controls"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:MangaReader_MVVM.Views"
      xmlns:models="using:MangaReader_MVVM.Models"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:MangaReader_MVVM.ViewModels" mc:Ignorable="d">
    <Page.DataContext>
        <vm:MangaDetailsPageViewModel x:Name="ViewModel" />
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary Source="..\Styles\Templates.xaml" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="600"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <t10controls:PageHeader x:Name="PageHeader" Text="Manga Library" Frame="{x:Bind Frame}" Grid.ColumnSpan="2">
            <t10controls:PageHeader.PrimaryCommands>
                <AppBarSeparator />
                <AppBarButton Icon="Sort" Label="Sort" Command="{Binding Path=SortGridCommand}"  />
            </t10controls:PageHeader.PrimaryCommands>
        </t10controls:PageHeader>

        <ProgressRing x:Name="StartupProgressRing" Grid.Row="1" Grid.ColumnSpan="2"
                      IsActive="False"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Width="100"
                      Height="100"
                      Canvas.ZIndex="2"/>
        <Grid x:Name="LoadingGrid" Background="{ThemeResource SystemControlDisabledBaseLowBrush}"
              Visibility="Collapsed"
              Grid.Row="1" Grid.ColumnSpan="2"
              Canvas.ZIndex="1"/>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Margin="10,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <controls:ImageEx x:Name="ImageExControl1" Width="206" Height="300"
                                  IsCacheEnabled="True"
                                  Source="{x:Bind Manga.Cover}"
                                  Stretch="Uniform"
                                  PlaceholderSource="/Assets/404_whoopsies.jpg"
                                  PlaceholderStretch="Uniform"
                                  VerticalAlignment="Top" />
                <StackPanel Orientation="Vertical" Margin="12,0,0,0">
                    <TextBlock x:Name="Category"  Text="{x:Bind Manga.Category}" FontSize="15"/>
                    <TextBlock x:Name="Status" Text="{x:Bind Manga.Ongoing}" FontSize="15"/>
                    <TextBlock x:Name="NumberOfChapters" Text="{x:Bind Manga.NumberOfChapters}" FontSize="15"/>
                    <TextBlock x:Name="LastUpdated" Text="{x:Bind Manga.LastUpdated}" FontSize="15"/>
                </StackPanel>
            </StackPanel>
            <TextBlock x:Name="Description" Text="{x:Bind Manga.Description}" TextWrapping="WrapWholeWords"/>
        </StackPanel>

        <!--<GridView x:Name="ChapterGridView" Grid.Row="1" Grid.Column="1"
                  ItemsSource="{x:Bind ViewModel.Chapters}"
                  Margin="12,0,0,0"
                  IsItemClickEnabled="True"
                  IncrementalLoadingThreshold="20"
                  ItemTemplate="{StaticResource ChapterItem}"
                  ItemClick="{x:Bind ViewModel.ChapterClicked}" >
        </GridView>-->
    </Grid>
</Page>
